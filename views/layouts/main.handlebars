<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Life Manager</title>
    <link rel="stylesheet" type="text/css" href="/css/jass.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  
  </head>
  <body>
    <div class="flex-column justify-space-around">
      <header class="main-header display-flex justify-space-between align-center p-2">
        <div class="logo-container"><img
            class="logo header-child header-bar"
            src="/images/logo-svg 2.svg">
            <p>{{format_date}}</p>
        </div>
       
        <nav>
           <div class="profile-container"><img
            class="profile header-child header-bar"
            src="/images/Profile-photo.svg">
          </div>
          <!-- Conditionally render login or logout links -->
          {{log logged_in}}
          {{#if logged_in}}
            
            <button class="no-button" id="logout">logout</button>
          {{else}}
            <a href="/login" class="profile">login</a>
          {{/if}}
        </nav>
      </header>
      <main class="container container-fluid mt-5">
        <aside class="aside-bar" id="side-bar">
            <div class="home-page hover">
                <a href="/dashboard"><button type="home-page" class="aside-button">
                    <img src="/images/home (1).svg" alt="Home" class="icon home-icon">
                </button></a>
                <p>Home</p>
            </div>
            <div class="hover">
                <button type="calendar" id="calendar" class="aside-button">
                    <img src="/images/calendar(1).svg" alt="" class="icon">
                </button><p>Calendar</p>
            </div>
             <div class="hover">
                <button type="my-task" id="my-task" class="aside-button">
                    <img src="/images/my-tasks(1).svg" alt="" class="icon">
                </button><p>My Tasks</p>
            </div>
            <div class="hover">
                <button type="interests" id="interests" class="aside-button">
                    <img src="/images/interest(1).svg" alt="" class="icon">
                </button><p>Interests</p>
            </div>
              <div class="">
        
                <a href="dashboard/tasks"><button type="add-task" id="add-task" class="aside-button">
                    <img src="/images/add-task.svg" alt="" class="add-icon">
                </button></a>
            </div>
        </aside>
        <div class="dashboard">
        <!-- Render the sub layout -->
          {{{body}}}
        </div>
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>